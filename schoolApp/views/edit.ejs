<% include partials/header %>
<div class="ui main text container segment">
    <div class= "ui big header">Edit your profile </div>

    <form class="ui form" action="/students/<%= stud._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="stud[name]" value="<%= stud.name %>"/>
        </div class="field">
        <div>
           <label>Image</label>
            <input type="text" name="stud[image]" value="<%= stud.name %>"/>
        </div>
        <div class="field">
            <label>Age</label>
            <input type="number" name="stud[age]" value="<%= stud.age %>"/>
        </div>
        
        <div class="field">
            <label>About you</label>
            <textarea type="text" name="stud[bio]" ><%= stud.bio %> </textarea>
        </div>
    
        <div>
            <input class= "ui violet big basic button" type="submit" />
        </div>
    </form>
</div>



<% include partials/footer %>

