<% include ./partials/header %>
<div class="ui main text container segment">
    <div class= "ui huge header">New Student Profile </div>

    <form class="ui form" action="/students" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="stud[name]" placeholder="Full name"/>
        </div class="field">
        <div>
           <label>Image</label>
            <input type="text" name="stud[image]" placeholder="imageurl"/>
        </div>
        <div class="field">
            <label>Age</label>
            <input type="number" name="stud[age]" placeholder="age"/>
        </div>
        
        <div class="field">
            <label>About you</label>
            <textarea type="text" name="stud[bio]" placeholder="Brief info"> </textarea>
        </div>
    
        <div>
            <input class= "ui violet big basic button" type="submit" />
        </div>
    </form>

</div>



<% include ./partials/footer %>

